<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ASLActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/asl_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/coustard"
            android:gravity="center"
            android:text="ASL Hand Signs"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/asl_image" />

    <ImageView
        android:id="@+id/asl_image"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:src="@drawable/aslsigns"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/asl_text" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>